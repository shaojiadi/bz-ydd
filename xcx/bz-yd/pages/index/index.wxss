/**index.wxss**/
page {
  background: #000; /*背景色*/
}
.slider,.slider swiper,.slider image{
  height:470rpx;
  width:100%;
}
.czfw{
  color:#fff;
  position: relative;
  width:100%;
  height:100rpx;
}
.serve{
  line-height: 120rpx;
  margin-left:40%;
}
.serve::after{
  content:'';
  width: 140rpx;
  height: 1rpx;
  background-color: #e1e1e1;
  position: absolute;
  left:15%;
  top: 30px;
}
.serve::before{
  content:'';
  width: 140rpx;
  height: 1rpx;
  background-color: #e1e1e1;
  position: absolute;
  right:15%;
  top: 30px;
}
/*九宫格*/
.index-nav{
  display:flex;
  flex-wrap:wrap;
}
.nav-item{
  width:25%;
  height:200rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column; /*排列方式变成列*/
  justify-content: center; 
  align-items:center;  /*垂直居中*/
  border-bottom:1px solid #fff;
}
.border{
  border-right:1px solid #fff;
}
.nav-item image{
  width:120rpx;
  height:120rpx;
}
.foot{
  margin-top:50rpx;
  color:#a1a1a1;
  font-size:15px;
  text-align: center;
}
